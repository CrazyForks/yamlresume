{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "vitest/globals"],

    "importHelpers": true,
    "composite": true,
    "target": "ES2015",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "."
  },

  "include": ["src/**/*.ts", "src/**/*.json"]
}
